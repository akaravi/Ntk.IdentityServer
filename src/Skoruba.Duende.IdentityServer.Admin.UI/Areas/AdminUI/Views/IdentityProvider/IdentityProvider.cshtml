@using Microsoft.AspNetCore.Mvc.Localization
@using Skoruba.Duende.IdentityServer.Admin.UI.Configuration.Constants
@model Skoruba.Duende.IdentityServer.Admin.BusinessLogic.Dtos.IdentityProvider.IdentityProviderDto
@inject IViewLocalizer Localizer

@{
	ViewBag.Title = Localizer["PageTitle"];
	Layout = "_Layout";
}

<div class="row">
	<div class="col-12">
		<nav aria-label="breadcrumb">
			<ol class="breadcrumb">
				<li class="breadcrumb-item"><a asp-area="@CommonConsts.AdminUIArea" asp-controller="identityProvider" asp-action="IdentityProviders">@Localizer["NavigationIdentityProviders"]</a></li>
				<li class="breadcrumb-item active" aria-current="page">@Model.Scheme</li>
			</ol>
		</nav>
	</div>

	<div class="col-12">
		<h2>@Localizer["PageTitle"]</h2>
	</div>
</div>

<form asp-area="@CommonConsts.AdminUIArea" asp-action="IdentityProvider" method="post" id="identity-provider-form">

	<div asp-validation-summary="All" class="text-danger"></div>

	<!--Hidden -->
	<input type="hidden" asp-for="Id" />

	<div class="card mt-3">
		<h5 class="card-header">@Localizer["PanelTitle"]</h5>
		<div class="card-body">
			<!--Input - text -->
			<div class="form-group row">
				<label asp-for="Scheme" class="col-sm-3 col-form-label">
					@await Html.PartialAsync("IdentityProvider/Section/Label", "Scheme")
				</label>
				<div class="col-sm-9">
					<input type="text" required class="form-control" asp-for="Scheme">
					<span asp-validation-for="Scheme" class="text-danger"></span>
				</div>
			</div>

			<!--Input - text -->
			<div class="form-group row">
				<label asp-for="DisplayName" class="col-sm-3 col-form-label">
					@await Html.PartialAsync("IdentityProvider/Section/Label", "DisplayName")
				</label>
				<div class="col-sm-9">
					<input type="text" class="form-control" asp-for="DisplayName">
				</div>
			</div>

			<!--Input - text -->
			<div class="form-group row">
				<label asp-for="Type" class="col-sm-3 col-form-label">
					@await Html.PartialAsync("IdentityProvider/Section/Label", "Type")
				</label>
				<div class="col-sm-9">
					<input type="text" class="form-control" asp-for="Type">
				</div>
			</div>

			<!--Checkbox-->
			<div class="form-group row">
				<label asp-for="Enabled" class="col-sm-3 col-form-label">
					@await Html.PartialAsync("IdentityProvider/Section/Label", "Enabled")
				</label>
				<div class="col-sm-9">
					<toggle-button>
						<input asp-for="Enabled" type="checkbox">
					</toggle-button>
				</div>
			</div>
			
			<!-- todo -- properties als k/v list-->
			
            @*<!--Input - text -->
            <div class="form-group row">
                <label asp-for="IdentityProviderProperties" class="col-sm-3 col-form-label">
                    @await Html.PartialAsync("IdentityProvider/Section/Label", "Properties")
                </label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" asp-for="IdentityProviderProperties">
                </div>
            </div>*@

            @if (Model.Id != 0)
			{
				<!--Button-->
				<div class="form-group row">
					<label class="col-sm-3 col-form-label">
						@await Html.PartialAsync("IdentityProvider/Section/Label", "Properties")
					</label>
					<div class="col-sm-9">
						<a asp-area="@CommonConsts.AdminUIArea" asp-action="IdentityProviderProperties" asp-route-id="@Model.Id" class="btn btn-primary">@Localizer["ButtonManageProperties"]</a>
					</div>
				</div>
			}

			<!--Button-->
			<div class="form-group row">
				<label class="col-sm-3 col-form-label">
				</label>
				<div class="col-sm-9">
					<button type="submit" asp-action="IdentityProvider" id="identity-provider-save-button" class="btn btn-primary">@Localizer["ButtonSave"]</button>
					@if (Model.Id != 0)
					{
						<a asp-area="@CommonConsts.AdminUIArea" class="btn btn-danger" asp-action="IdentityProviderDelete" asp-route-id="@Model.Id">@Localizer["ButtonDelete"]</a>
					}
				</div>
			</div>
		</div>
	</div>

</form>

@section scripts
	{
	<script>
		$(function () {

			//Disable enter for this form
			FormMvc.disableEnter($('#identity-provider-form'));
		});
	</script>
}